<Window x:Class="WpfDashboardControl.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:dashboardcontrol2="clr-namespace:OptimIT.Dashboard;assembly=OptimIT.Dashboard"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Ajouter" x:Name="b_add"/>
            <Button Content="Modifier" x:Name="b_edit"/>
        </ToolBar>
        <dashboardcontrol2:DashboardHost  x:Name="d_host" DockPanel.Dock="Top"/>
    </DockPanel>
</Window>
